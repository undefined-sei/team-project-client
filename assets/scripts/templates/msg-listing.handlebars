{{#each msgs as |msg| }}
{{log msg.owner}}
{{log msg.currentOwner}}
{{log msg.currentOwner}}
{{log msg.owner.email}}
  <div class="msg" id={{msg._id}} style="border: 1px solid gray; display: flex; flex-direction: row; align-items: center">
    <p class="timestamp">
      {{msg.createdAt}}
    </p>
    <p class="msg-email">
      {{msg.owner.email}}
    </p>
    <p class="msg-content" style="margin: 0 0 0 5%">
      {{msg.text}}
    </p>
    {{#if (equal msg.owner._id msg.currentOwner) }}
      <form class="update-form" data-id={{msg._id}}>
        <input type="text" name="message[text]" value={{msg.text}}>
        <button class="update-button" data-id={{msg._id}}>Update</button>
      </form>
      <button class="delete-button" data-id={{msg._id}}>Delete</button>
    {{/if}}
  </div>
{{/each}}
